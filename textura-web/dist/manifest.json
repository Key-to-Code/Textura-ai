{
  "manifest_version": 3,
  "name": "Textura AI Assistant",
  "version": "1.0.0",
  "description": "AI-powered text processing assistant",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:8080/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Textura",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}